<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/warpButtonToArithmeticAct1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="зона 1 акт 1"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/warpButtonToArithmeticAct5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="зона 1 босс"
        app:layout_constraintEnd_toEndOf="@+id/warpButtonToArithmeticAct1"
        app:layout_constraintStart_toStartOf="@+id/warpButtonToArithmeticAct1"
        app:layout_constraintTop_toBottomOf="@+id/warpButtonToArithmeticAct1" />

    <TextView
        android:id="@+id/lifeCounter"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="18dp"
        android:text="Life: 3"
        app:layout_constraintEnd_toEndOf="@+id/warpButtonToArithmeticAct5"
        app:layout_constraintStart_toStartOf="@+id/warpButtonToArithmeticAct5"
        app:layout_constraintTop_toBottomOf="@+id/warpButtonToArithmeticAct5" />

    <Button
        android:id="@+id/resurrectButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Восст. жизнь"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lifeCounter" />

</androidx.constraintlayout.widget.ConstraintLayout>