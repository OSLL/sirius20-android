<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent">

<TextView
    android:id="@+id/textHead1_2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:text="@string/Head1_1"
    android:textAllCaps="true"
    android:textColor="@color/colorHeads"
    android:textSize="20sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.551"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

<TextView
    android:id="@+id/headMultipleTheoretics2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:fontFamily="sans-serif"
    android:text="@string/Subhead1_1"
    android:textColor="@color/colorSubheads"
    android:textSize="15sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.551"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textHead1_2" />

<ProgressBar
    android:id="@+id/progressBarZone1Act2_2"
    style="?android:attr/progressBarStyleHorizontal"
    android:layout_width="130dp"
    android:layout_height="wrap_content"
    android:max="8"
    android:progress="1"
    android:secondaryProgressTint="@color/colorSubheads"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.551"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/headMultipleTheoretics2" />

<ScrollView
    android:id="@+id/ScrollZ1A1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="10dp"
    android:layout_marginTop="80dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="50dp"
    android:background="@color/colorBackScroll"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.0">

    <LinearLayout
        android:id="@+id/linearZ1A1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textMultipleTask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10sp"
            android:paddingTop="5sp"
            android:paddingRight="10sp"
            android:text="@string/MultipleTask"
            android:textColor="@color/colorText" />

        <EditText
            android:id="@+id/editTextMultiple1"
            android:layout_width="302dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center_horizontal|center_vertical"
            android:hint="@string/editTextHint"
            android:importantForAccessibility="no"
            android:importantForAutofill="no"
            android:inputType="number"
            android:labelFor="@id/textMultipleTask" />

        <TextView
            android:id="@+id/textRes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10sp"
            android:paddingTop="5sp"
            android:paddingRight="10sp"
            android:textColor="@color/colorText" />
    </LinearLayout>
</ScrollView>

<Button
    android:id="@+id/checkMultiple"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorBackButton"
    android:paddingLeft="10sp"
    android:paddingRight="10sp"
    android:text="@string/check"
    android:textColor="#FFFFFF"
    android:textSize="25sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>