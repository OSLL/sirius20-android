<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuSetup">

    <Button
        android:id="@+id/setupToMainButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/to_main"
        android:textColor="@color/colorText"
        app:layout_constraintEnd_toEndOf="@+id/setupSendNotificationButton"
        app:layout_constraintStart_toStartOf="@+id/setupSendNotificationButton"
        app:layout_constraintTop_toBottomOf="@+id/setupSendNotificationButton" />

    <EditText
        android:id="@+id/setupHiddenNotificationName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="32dp"
        android:ems="10"
        android:hint="Заглоловок уведомления"
        android:inputType="text"
        android:text="@string/app_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/setupHiddenNotificationText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Текст уведомления"
        android:inputType="text"
        android:text="@string/result_good"
        app:layout_constraintEnd_toEndOf="@+id/setupHiddenNotificationName"
        app:layout_constraintStart_toStartOf="@+id/setupHiddenNotificationName"
        app:layout_constraintTop_toBottomOf="@+id/setupHiddenNotificationName" />

    <Button
        android:id="@+id/setupSendNotificationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Отправить уведомление"
        app:layout_constraintEnd_toEndOf="@+id/setupHiddenNotificationText"
        app:layout_constraintStart_toStartOf="@+id/setupHiddenNotificationText"
        app:layout_constraintTop_toBottomOf="@+id/setupHiddenNotificationText" />

</androidx.constraintlayout.widget.ConstraintLayout>