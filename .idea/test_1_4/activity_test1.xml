<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestActivity1">

    <TextView
        android:id="@+id/zoneName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/zone_10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/actName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="monospace"
        android:text="@string/act_boss"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/zoneName"
        app:layout_constraintStart_toStartOf="@+id/zoneName"
        app:layout_constraintTop_toBottomOf="@+id/zoneName" />

    <ScrollView
        android:id="@+id/actProgressBar"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:background="#FFFFFF"
        android:foregroundTint="#009688"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/actName">

        <LinearLayout
            android:id="@+id/actProgressBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <TextView
        android:id="@+id/actProgressName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/act_progress_task"
        app:layout_constraintEnd_toEndOf="@+id/actName"
        app:layout_constraintStart_toStartOf="@+id/actName"
        app:layout_constraintTop_toBottomOf="@+id/actProgressBar" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Given a regular triangular pyramid with a side edge of 7 and an apophema of 2sqrt(7), find the angle between the base and one of the side faces.\nPut the answer (in degrees) in the field below."
        app:layout_constraintEnd_toEndOf="@+id/actProgressBar"
        app:layout_constraintStart_toStartOf="@+id/actProgressBar"
        app:layout_constraintTop_toBottomOf="@+id/actProgressName" />

    <EditText
        android:id="@+id/inputField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Input..."
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/textView7"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <Button
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:backgroundTint="#009688"
        android:text="@string/act_action_next"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/inputField"
        app:layout_constraintStart_toStartOf="@+id/inputField"
        app:layout_constraintTop_toBottomOf="@+id/inputField" />
</androidx.constraintlayout.widget.ConstraintLayout>